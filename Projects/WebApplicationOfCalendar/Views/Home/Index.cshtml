            <td class="ordinary_row">@Model.fourthWeekList[5]</td>
            <td class="saturday_row">@Model.fourthWeekList[6]</td>
        </tr>
        <tr>
            <td class="sunday_row">@Model.fifthWeekList[0]</td>
            <td class="ordinary_row">@Model.fifthWeekList[1]</td>
            <td class="ordinary_row">@Model.fifthWeekList[2]</td>
            <td class="ordinary_row">@Model.fifthWeekList[3]</td>
            <td class="ordinary_row">@Model.fifthWeekList[4]</td>
            <td class="ordinary_row">@Model.fifthWeekList[5]</td>
            <td class="saturday_row">@Model.fifthWeekList[6]</td>
        </tr>
        <tr>
            <td class="sunday_row">@Model.sixthWeekList[0]</td>
