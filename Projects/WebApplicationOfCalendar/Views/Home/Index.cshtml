@using WebApplicationOfCalendar.Models
@model WebApplicationOfCalendar.Models.CalendarViewModel
@{
    ViewBag.Title = "MonthCalendar";
}

<body>
    <table class="month_calendar">
        <tr>
            <td class="years_line" colspan="7">@Model.DisplayYear 年 @Model.DisplayMonth 月</td>
        </tr>
        <tr>
            <td class="sunday_row">@WeekdayCode.sunday</td>
            <td class="ordinary_row">@WeekdayCode.monday</td>
            <td class="ordinary_row">@WeekdayCode.tuesday</td>
            <td class="ordinary_row">@WeekdayCode.wednesday</td>
            <td class="ordinary_row">@WeekdayCode.thursday</td>
            <td class="ordinary_row">@WeekdayCode.friday</td>
            <td class="saturday_row">@WeekdayCode.saturday</td>
        </tr>
        <tr>
            <td class="sunday_row">@Model.firstWeekList[0]</td>
            <td class="ordinary_row">@Model.firstWeekList[1]</td>
            <td class="ordinary_row">@Model.firstWeekList[2]</td>
            <td class="ordinary_row">@Model.firstWeekList[3]</td>
            <td class="ordinary_row">@Model.firstWeekList[4]</td>
            <td class="ordinary_row">@Model.firstWeekList[5]</td>
            <td class="saturday_row">@Model.firstWeekList[6]</td>
        </tr>
        <tr>
            <td class="sunday_row">@Model.secondWeekList[0]</td>
            <td class="ordinary_row">@Model.secondWeekList[1]</td>
            <td class="ordinary_row">@Model.secondWeekList[2]</td>
            <td class="ordinary_row">@Model.secondWeekList[3]</td>
            <td class="ordinary_row">@Model.secondWeekList[4]</td>
            <td class="ordinary_row">@Model.secondWeekList[5]</td>
            <td class="saturday_row">@Model.secondWeekList[6]</td>
        </tr>
        <tr>
            <td class="sunday_row">@Model.thirdWeekList[0]</td>
            <td class="ordinary_row">@Model.thirdWeekList[1]</td>
            <td class="ordinary_row">@Model.thirdWeekList[2]</td>
            <td class="ordinary_row">@Model.thirdWeekList[3]</td>
            <td class="ordinary_row">@Model.thirdWeekList[4]</td>
            <td class="ordinary_row">@Model.thirdWeekList[5]</td>
            <td class="saturday_row">@Model.thirdWeekList[6]</td>
        </tr>
        <tr>
